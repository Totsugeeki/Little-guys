    build-depends:
        base, uri-encode, open-browser, bytestring, base64-bytestring, deepseq, bytes, bits, worms
    hs-source-dirs:   test
    default-language: GHC2021

executable worms-game
    import:           warnings

    -- Modules included in this executable, other than Main.
    other-modules:
        Worms
        Desenhar
        Eventos
        Tempo
        Sprites
        Camera
        Types
        Mapa

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:

    main-is:          Main.hs

    build-depends:
        base, gloss, worms , gloss-juicy, JuicyPixels,  containers >= 0.6, random

    hs-source-dirs:   app

